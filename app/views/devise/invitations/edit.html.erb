<h1>Sign up</h1>

<%= simple_form_for(resource, :as => resource_name, :url => invitation_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :invitation_token %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :forename %>
    <%= f.input :surname %>
    <%= f.input :invite_code %>
    <%= f.association :user_type, :collection => UserType.all, :prompt => "Choose a user type" %>
    <%= f.hidden_field :manager_id, :input_html => {:value => User.find_by_invitation_token(params[:invitation_token]).invited_by_id} %>
    <div class="well">
      <%= f.button :submit, "Sign up", :class => 'btn primary' %>
    </div>
<% end %>
