<fieldset class="login register">
  <legend class="login register">Sign up</legend>

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

      <%= devise_error_messages! %>

      </br>
      <p><%= f.input :email, :input_html => { :size => 35 } %></p>

      <p><%= f.input :password, :input_html => { :size => 40 } %></p>

      <p><%= f.input :password_confirmation, :input_html => { :size => 40 } %></p>

      <p><%= f.input :forename, :input_html => { :size => 40 } %></p>

      <p><%= f.input :surname, :input_html => { :size => 40 } %></p>

      <p><%= f.input :invite_code, :input_html => { :size => 10 } %></p>

      <p><%= f.association :user_type, :collection => UserType.all, :prompt => "Choose a user type" %></p>

      <p><%= f.label :manager_id, :name=>"Manager" %>
      <%= f.collection_select :manager_id, User.where("user_type_id = 2"), :id, :email, :prompt => "Choose a manager" %></p>

      <p><%= f.submit "Sign up" %></p>

  <% end %>

  <%= render :partial => "devise/shared/links" %>

</fieldset>

