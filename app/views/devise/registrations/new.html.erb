<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <%= f.input :email %>

    <%= f.input :password %>

    <%= f.input :password_confirmation %>

    <%#= f.input :days_leave, :input_html=>{:max_length=>2, :size=>5} %>

    <%= f.association :user_type, :collection => UserType.all, :prompt => "Choose a user type" %>

    <%= f.label :manager_id, :name=>"Manager" %>

    <%= f.collection_select :manager_id, User.where("user_type_id = 2"), :id, :email %>

    <p><%= f.submit "Sign up" %></p>

<% end %>

<%= render :partial => "devise/shared/links" %>

