<% if @failed -%>
    $("#flash_notice").hide(300);
    $("#messages").html("<%= escape_javascript(@vacation.errors.full_messages.to_sentence) %>");
    $('#error_panel').show('slide', {direction: 'right'}, 1000);
<% else -%>
    $("#holidaysTable tbody tr#<%=@row_id%>").remove();
    $("#show_days").html("Days Remaining:<%=@days_remaining%>");
    $("#flash_notice").html("<%= escape_javascript(flash[:notice])%>");
    $("#flash_notice").show();
    $("#flash_notice").fadeOut(5000);
<% end -%>