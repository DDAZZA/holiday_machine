$(document).ready(function (){

<% if @vacation.errors.any? -%>
        $("#flash_notice").hide(300);
        $("#vacation_errors").html("<%= escape_javascript(@vacation.errors.full_messages.to_sentence) %>");
        $("#vacation_errors").show();
<% else -%>
        $("#vacation_errors").hide(300);
        $("#flash_notice").html("<%= escape_javascript(flash[:notice])%>");
        $("#flash_notice").show();
        clearForm();
        $("#vacation_date_from").val($.formatDate(new Date(), "dd/MM/yyyy"));
        $("#vacation_date_to").val($.formatDate(new Date(), "dd/MM/yyyy"));
        $('#holidaysTable tbody').append("<%= raw(create_holiday_row(@vacation))%>");
        $("#days_remaining").html("Days Remaining:<%=@days_remaining%>");
<% end -%>

});