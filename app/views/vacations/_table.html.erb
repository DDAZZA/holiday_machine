<div id="user-holidays">
  <% if @vacations.present? %>
    <table id="holidays">
      <thead>
        <th>Start date</th>
        <th>End date</th>
        <th>Description</th>
        <th>Working days used</th>
        <th>Status</th>
        <th>&nbsp;</th>
      </thead>
      <tbody>
      <% @vacations.each do |vacation| %>
        <%= create_holiday_row(vacation) %>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p>You have no holidays planned for this calendar year yet.</p>
  <% end %>
</div>
