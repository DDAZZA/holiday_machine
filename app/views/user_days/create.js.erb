<% if @user_day.errors.any? -%>
        $("#flash_notice").hide(300);
        $("#user_days_errors").html("<%= escape_javascript(@user_day.errors.full_messages.to_sentence) %>");
        $("#user_days_errors").show();
<% else -%>
        $("#user_days_errors").hide(300);
        $("#flash_notice").html("<%= escape_javascript(flash[:notice])%>");
        $("#flash_notice").show();
        $(":input:not(input[type=submit])").val("");
        $('<tr class="userDayReadOnly"><td><%= @user_day.reason %></td><td><%= @user_day.no_days %></td><td></td></tr>').insertBefore('.formNo<%=@user_day.user.id%>');
<% end -%>